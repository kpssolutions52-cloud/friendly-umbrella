{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": null,
    "watchPatterns": [
      "packages/frontend/**"
    ]
  },
  "deploy": {
    "startCommand": "cd packages/frontend && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

