generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Multi-tenant companies (suppliers and companies)
model Tenant {
  id              String       @id @default(uuid())
  name            String       @db.VarChar(255)
  type            TenantType
  email           String       @unique @db.VarChar(255)
  phone           String?      @db.VarChar(50)
  address         String?      @db.Text
  postalCode      String?      @map("postal_code") @db.VarChar(20)
  logoUrl         String?      @map("logo_url") @db.VarChar(500)
  status          TenantStatus @default(pending)
  isActive        Boolean      @default(false) @map("is_active")
  approvedBy      String?      @map("approved_by")
  approvedAt      DateTime?    @map("approved_at")
  rejectedBy      String?      @map("rejected_by")
  rejectedAt      DateTime?    @map("rejected_at")
  rejectionReason String?      @map("rejection_reason") @db.Text
  metadata        Json?        @default("{}")
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")

  // Relations
  users                 User[]
  products              Product[]      @relation("SupplierProducts") // Products/services from suppliers or service providers
  privatePrices         PrivatePrice[] @relation("CompanyPrivatePrices")
  priceViews            PriceView[]
  companyQuoteRequests  QuoteRequest[] @relation("CompanyQuoteRequests")
  supplierQuoteRequests QuoteRequest[] @relation("SupplierQuoteRequests")

  @@index([type])
  @@index([status])
  @@index([isActive])
  @@index([status, type])
  @@map("tenants")
}

enum TenantType {
  supplier
  company
  service_provider
}

enum TenantStatus {
  pending
  active
  rejected
}

// All users across tenants (or super admins without tenant)
model User {
  id              String     @id @default(uuid())
  tenantId        String?    @map("tenant_id") // Nullable for super admins
  email           String     @unique @db.VarChar(255)
  passwordHash    String     @map("password_hash") @db.VarChar(255)
  firstName       String?    @map("first_name") @db.VarChar(100)
  lastName        String?    @map("last_name") @db.VarChar(100)
  role            UserRole
  status          UserStatus @default(pending)
  isActive        Boolean    @default(false) @map("is_active")
  approvedBy      String?    @map("approved_by")
  approvedAt      DateTime?  @map("approved_at")
  rejectedBy      String?    @map("rejected_by")
  rejectedAt      DateTime?  @map("rejected_at")
  rejectionReason String?    @map("rejection_reason") @db.Text
  permissions     Json?      @default("{}") // Granular permissions: { products: { view: true, update: true, delete: false }, prices: {...} }
  lastLoginAt     DateTime?  @map("last_login_at")
  createdAt       DateTime   @default(now()) @map("created_at")
  updatedAt       DateTime   @updatedAt @map("updated_at")

  // Relations
  tenant          Tenant?         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  priceAudits     PriceAuditLog[] @relation("ChangedByUser")
  priceViews      PriceView[]
  requestedQuotes QuoteRequest[]  @relation("RequestedQuotes")
  respondedQuotes QuoteRequest[]  @relation("RespondedQuotes")
  quoteResponses  QuoteResponse[] @relation("QuoteResponses")

  @@index([tenantId])
  @@index([email])
  @@index([role])
  @@index([status])
  @@index([tenantId, status])
  @@map("users")
}

enum UserRole {
  super_admin
  supplier_admin
  supplier_staff
  company_admin
  company_staff
  service_provider_admin
  service_provider_staff
  customer
}

enum UserStatus {
  pending
  active
  rejected
}

// Product type enum
enum ProductType {
  product
  service
}

// Supplier product catalog (now supports both products and services)
model Product {
  id                String      @id @default(uuid())
  supplierId        String      @map("supplier_id") // Can be supplier or service_provider
  type              ProductType @default(product)
  sku               String      @db.VarChar(100)
  name              String      @db.VarChar(255)
  description       String?     @db.Text
  categoryId        String?     @map("category_id") // Reference to ProductCategory (for products)
  serviceCategoryId String?     @map("service_category_id") // Reference to ServiceCategory (for services)
  unit              String      @db.VarChar(50)
  // Service-specific fields
  ratePerHour       Decimal?    @map("rate_per_hour") @db.Decimal(10, 2) // For services: hourly rate
  rateType          String?     @map("rate_type") @db.VarChar(50) // e.g., "per_hour", "per_project", "fixed", "negotiable"
  isActive          Boolean     @default(true) @map("is_active")
  metadata          Json?       @default("{}")
  createdAt         DateTime    @default(now()) @map("created_at")
  updatedAt         DateTime    @updatedAt @map("updated_at")

  // Relations
  supplier        Tenant           @relation("SupplierProducts", fields: [supplierId], references: [id], onDelete: Cascade)
  category        ProductCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  serviceCategory ServiceCategory? @relation(fields: [serviceCategoryId], references: [id], onDelete: SetNull)
  defaultPrices   DefaultPrice[]
  privatePrices   PrivatePrice[]
  priceAudits     PriceAuditLog[]
  priceViews      PriceView[]
  quoteRequests   QuoteRequest[]
  images          ProductImage[]

  @@unique([supplierId, sku])
  @@index([supplierId])
  @@index([type])
  @@index([isActive])
  @@index([sku])
  @@index([categoryId])
  @@index([serviceCategoryId])
  @@map("products")
}

// Product images
model ProductImage {
  id           String   @id @default(uuid())
  productId    String   @map("product_id")
  imageUrl     String   @map("image_url") @db.VarChar(500)
  displayOrder Int      @default(0) @map("display_order")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([productId, displayOrder])
  @@map("product_images")
}

// Default prices visible to all companies
model DefaultPrice {
  id             String    @id @default(uuid())
  productId      String    @map("product_id")
  price          Decimal   @db.Decimal(12, 2)
  currency       String    @default("USD") @db.VarChar(3)
  effectiveFrom  DateTime  @default(now()) @map("effective_from")
  effectiveUntil DateTime? @map("effective_until")
  isActive       Boolean   @default(true) @map("is_active")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  // Relations
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([isActive])
  @@index([effectiveFrom, effectiveUntil])
  @@map("default_prices")
}

// Company-specific negotiated prices
model PrivatePrice {
  id                 String    @id @default(uuid())
  productId          String    @map("product_id")
  companyId          String    @map("company_id")
  price              Decimal?  @db.Decimal(12, 2) // Nullable if discountPercentage is used
  discountPercentage Decimal?  @map("discount_percentage") @db.Decimal(5, 2) // e.g., 10.00 for 10%
  currency           String    @default("USD") @db.VarChar(3)
  effectiveFrom      DateTime  @default(now()) @map("effective_from")
  effectiveUntil     DateTime? @map("effective_until")
  isActive           Boolean   @default(true) @map("is_active")
  notes              String?   @db.Text
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")

  // Relations
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  company Tenant  @relation("CompanyPrivatePrices", fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([productId, companyId, effectiveFrom])
  @@index([productId])
  @@index([companyId])
  @@index([isActive])
  @@index([effectiveFrom, effectiveUntil])
  @@map("private_prices")
}

// Audit trail for all price changes
model PriceAuditLog {
  id           String    @id @default(uuid())
  productId    String    @map("product_id")
  priceType    PriceType @map("price_type")
  companyId    String?   @map("company_id")
  oldPrice     Decimal?  @map("old_price") @db.Decimal(12, 2)
  newPrice     Decimal   @map("new_price") @db.Decimal(12, 2)
  changedBy    String    @map("changed_by")
  changedAt    DateTime  @default(now()) @map("changed_at")
  changeReason String?   @map("change_reason") @db.Text
  ipAddress    String?   @map("ip_address") @db.VarChar(45)
  userAgent    String?   @map("user_agent") @db.Text

  // Relations
  product       Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  changedByUser User    @relation("ChangedByUser", fields: [changedBy], references: [id])

  @@index([productId])
  @@index([companyId])
  @@index([changedBy])
  @@index([changedAt])
  @@index([priceType])
  @@map("price_audit_log")
}

enum PriceType {
  default
  private
}

// Analytics - product view tracking
model PriceView {
  id        String    @id @default(uuid())
  productId String    @map("product_id")
  companyId String    @map("company_id")
  userId    String?   @map("user_id")
  viewedAt  DateTime  @default(now()) @map("viewed_at")
  priceType PriceType @map("price_type")

  // Relations
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  company Tenant  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([productId])
  @@index([companyId])
  @@index([viewedAt])
  @@map("price_views")
}

// Quote Request System
model QuoteRequest {
  id             String      @id @default(uuid())
  companyId      String      @map("company_id")
  supplierId     String      @map("supplier_id")
  productId      String      @map("product_id")
  quantity       Decimal?    @db.Decimal(10, 2) // Optional quantity
  unit           String?     @db.VarChar(50)
  requestedPrice Decimal?    @map("requested_price") @db.Decimal(12, 2) // Company's target price
  currency       String      @default("USD") @db.VarChar(3)
  message        String?     @db.Text // Additional notes/requirements
  status         QuoteStatus @default(pending)
  requestedBy    String      @map("requested_by") // User ID
  respondedBy    String?     @map("responded_by") // User ID
  respondedAt    DateTime?   @map("responded_at")
  expiresAt      DateTime?   @map("expires_at") // Optional expiration
  createdAt      DateTime    @default(now()) @map("created_at")
  updatedAt      DateTime    @updatedAt @map("updated_at")

  // Relations
  company         Tenant          @relation("CompanyQuoteRequests", fields: [companyId], references: [id], onDelete: Cascade)
  supplier        Tenant          @relation("SupplierQuoteRequests", fields: [supplierId], references: [id], onDelete: Cascade)
  product         Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  requestedByUser User            @relation("RequestedQuotes", fields: [requestedBy], references: [id])
  respondedByUser User?           @relation("RespondedQuotes", fields: [respondedBy], references: [id])
  responses       QuoteResponse[]

  @@index([companyId])
  @@index([supplierId])
  @@index([productId])
  @@index([status])
  @@index([requestedBy])
  @@index([createdAt])
  @@index([companyId, status])
  @@index([supplierId, status])
  @@map("quote_requests")
}

model QuoteResponse {
  id             String    @id @default(uuid())
  quoteRequestId String    @map("quote_request_id")
  price          Decimal   @db.Decimal(12, 2)
  currency       String    @default("USD") @db.VarChar(3)
  quantity       Decimal?  @db.Decimal(10, 2) // Quantity this price applies to
  unit           String?   @db.VarChar(50)
  validUntil     DateTime? @map("valid_until") // Price validity period
  message        String?   @db.Text // Supplier's response message
  terms          String?   @db.Text // Payment terms, delivery terms, etc.
  respondedBy    String    @map("responded_by") // User ID
  respondedAt    DateTime  @default(now()) @map("responded_at")
  isAccepted     Boolean   @default(false) @map("is_accepted")
  acceptedAt     DateTime? @map("accepted_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  // Relations
  quoteRequest    QuoteRequest @relation(fields: [quoteRequestId], references: [id], onDelete: Cascade)
  respondedByUser User         @relation("QuoteResponses", fields: [respondedBy], references: [id])

  @@index([quoteRequestId])
  @@index([respondedBy])
  @@index([respondedAt])
  @@index([isAccepted])
  @@map("quote_responses")
}

enum QuoteStatus {
  pending // Waiting for supplier response
  responded // Supplier has responded
  accepted // Company accepted the quote
  rejected // Company rejected the quote
  expired // Quote request expired
  cancelled // Company cancelled the request
  deleted // Company deleted the RFQ (soft delete)
}

// Product categories managed by super admin (supports main categories and subcategories)
model ProductCategory {
  id           String   @id @default(uuid())
  name         String   @db.VarChar(100)
  description  String?  @db.Text
  iconUrl      String?  @map("icon_url") @db.VarChar(500)
  parentId     String?  @map("parent_id") // Null for main categories, set for subcategories
  isActive     Boolean  @default(true) @map("is_active")
  displayOrder Int      @default(0) @map("display_order")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Self-referential relation for parent-child
  parent   ProductCategory?  @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children ProductCategory[] @relation("CategoryHierarchy")

  // Relations
  products Product[]

  @@unique([name, parentId]) // Allow same name in different parents
  @@index([parentId])
  @@index([isActive])
  @@index([name])
  @@index([displayOrder])
  @@map("product_categories")
}

// Service categories managed by super admin (supports main categories and subcategories)
// Separate from product categories as services have different structure
model ServiceCategory {
  id           String   @id @default(uuid())
  name         String   @db.VarChar(100)
  description  String?  @db.Text
  iconUrl      String?  @map("icon_url") @db.VarChar(500)
  parentId     String?  @map("parent_id") // Null for main categories, set for subcategories
  isActive     Boolean  @default(true) @map("is_active")
  displayOrder Int      @default(0) @map("display_order")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Self-referential relation for parent-child
  parent   ServiceCategory?  @relation("ServiceCategoryHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children ServiceCategory[] @relation("ServiceCategoryHierarchy")

  // Relations
  products Product[]

  @@unique([name, parentId]) // Allow same name in different parents
  @@index([parentId])
  @@index([isActive])
  @@index([name])
  @@index([displayOrder])
  @@map("service_categories")
}
